  },
  "devDependencies": {
    "@babel/cli": "7.26.4",
    "@babel/core": "7.26.9",
    "@shelf/babel-config": "3.0.0",
    "@shelf/eslint-config": "3.15.1",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@types/debug": "4.1.12",
    "@types/jest": "29.5.14",
    "@types/node": "16",
    "eslint": "8.57.1",
    "jest": "29.7.0",
    "memorystream": "0.3.1",
    "prettier": "3.5.2",
    "typescript": "5.8.2"
